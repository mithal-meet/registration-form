<h1>Listing Leaves</h1>

<table>
  <thead>
    <tr>
      <th>leave_type</th>
      <th>Duration</th>
      <th>User</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leaves.each do |leave| %>
      <tr>
        <td><%= leave.leave_type %></td>
        <td><%= leave.duration %></td>
        <td><%= leave.user_id %></td>

  <% if leave.status == false %>
  <td><%= "pending" %></td>
  <% else %>
 <td> <%= "approved" %></td>
  <% end %>
        <td><%= link_to 'Show', leave %></td>
        <td><%= link_to 'Edit', edit_leave_path(leave) %></td>
        <td><%= link_to 'Destroy', leave, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

