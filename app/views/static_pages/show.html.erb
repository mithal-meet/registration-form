<h1><br/>Listing Users</h1>
<script>
  $(document).ready(function() {
    $('.datatable').dataTable();
  } );
</script>
<table id ="datatable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
     <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @users.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.email %></td>
        <td><%= idea.phone %></td>
        <!--<td><%#= link_to 'Edit', static_pages_edit_path(idea) %></td> -->
        <td><%= link_to 'Destroy', "users/destroy/#{idea.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'edit', edit_user_path(idea) %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

