<p id="notice"><%= notice %></p>

<h1>Listing User Leaves</h1>
<script>
  $(document).ready(function() {
    $('.datatable').dataTable();
  } );
</script>
<table id= "datatable">
  <thead>
    <tr>
      <th>&emsp;&emsp;&emsp;User_id</th>
      <th>&emsp;&emsp;&emsp;&emsp;User_name</th>
      <th>&emsp;&emsp;&emsp;Leave type</th>
      <th>&emsp;&emsp;&emsp;Leave taken</th>
      <th>&emsp;&emsp;Leave left</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_leaves.each do |user_leave| %>
      <tr>
        <td><%= user_leave.user_id %></td>
        <td> <% @user=User.find(user_leave.user_id) %>
            <%= @user.name %> </td>
        <td><%= user_leave.leave_type %></td>
        <td><%= user_leave.leave_taken %></td>
        <td><%= user_leave.leave_left %></td>
      
        <td><%= link_to 'Show', user_leave %></td>
        <td><%= link_to 'Edit', edit_user_leave_path(user_leave) %></td>
        <td><%= link_to 'Destroy', user_leave, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

